/*方块点击之后的闪烁效果  */
.active{ 
  -webkit-animation: twinkling 1s infinite ease-in-out 
} 
.animated{ 
  -webkit-animation-duration: 1s; 
  animation-duration: 1s; 
  -webkit-animation-fill-mode: both; 
  animation-fill-mode: both 
} 
@-webkit-keyframes twinkling{ 
  0%{ 
    opacity: 0.2; 
  } 
  100%{ 
    opacity: 1; 
  } 
} 
@keyframes twinkling{ 
  0%{ 
    opacity: 0.2; 
  } 
  100%{ 
    opacity: 1; 
  } 
}
